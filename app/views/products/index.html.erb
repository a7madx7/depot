<p id="notice"><%= notice %></p>

<h1 class="ui header">Listing Products</h1>

<table class="ui table">
  <thead class="ui header">
    <tr class="ui row">
      <th>Product</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<div class="ui green horizontal separator"></div>
  <tbody class="ui">
    <% @products.each do |product| %>
      <tr>
        <td class="ui item">
          <%= image_tag(product.image_url, class: 'ui tiny left floated circular image') %>
          <p><%= product.title %></p>
        </td>
        <td class="ui item"><%= truncate(strip_tags(product.description), length: 80) %></td>
        <td class="ui item"><p><%= product.price %></p></td>
        <td class="ui 3 buttons">
          <%= link_to 'Show', product, class: 'ui purple button' %>
          <%= link_to 'Edit', edit_product_path(product), class: 'ui green button' %>
          <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } , class: 'ui orange button'%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path, class: 'ui blue button' %>
